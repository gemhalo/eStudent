<% if @drop_requests.blank? %>
  No Course Drop Request
<% else %>
  
<table border="1">
  <tr>
    <th>ID Number</th>
    <th>Department</th>
    <th>Class Year</th>
    <td> Course To Drop</td>
    <td></td>
    <td></td>
  </tr>
    <% for a in @drop_requests %>
  <tr>
    <td><%= a.registration.student.id_number %> </td>
    <td><%= a.registration.student.department.name %> </td>
    <td><%=  a.registration.class_year.name %></td
    <td><%=  a.offered_course.curriculum_course.course.course_title %></td
    <td><%= link_to "Approve", :action=>"approve_drop", :id=>a.id %> </td>
    <td><%= link_to "Decline", :action=>"decline_drop", :id=>a.id %> </td>
    <% end %>
  </tr>
</table>

<% end %>
