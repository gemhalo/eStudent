
<fieldset style="width: 60%">
  <legend>Dormitory Placement For Fresh Students</legend><br/>
  <%= form_tag(:action=> "dorm_placing_process", :method=>"get") do %>
  <b><%= label_tag "Building" %></b>
  <%= select_tag "building", options_from_collection_for_select(Building.all, "id", "building_name"), :multiple=>true, :size=>2%><br/><br/>
  <b><%= label_tag "College" %></b>
  <%= select_tag "college", options_from_collection_for_select(College.all, "id", "name")%><br/><br/>
  <b><%= label_tag "Sex" %></b>&nbsp;&nbsp;
  <%= radio_button_tag 'gender', 'M' %> Males &nbsp;
  <%= radio_button_tag 'gender', 'F' %> Females<br/><br/>

  &nbsp&nbsp&nbsp<%= submit_tag "Place"  %> <br/><br/>
  <% end %>
</fieldset>