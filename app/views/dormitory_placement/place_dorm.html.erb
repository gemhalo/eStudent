<pre>
  <%= form_tag(:action=> "dorm_placing_process", :method=>"get") do %>
  Building Name:  <%= select_tag "building", options_from_collection_for_select(@buildings, "id", "building_name", :prompt=true) %>
  
  College:        <%= select_tag "college", options_from_collection_for_select(@colleges, "id", "name") %>

  Department:     <%= text_field_tag 'department' %>

  Sex               <%= select_tag "sex",options_for_select(['Male','Female']) %>

            <%= submit_tag "Place"  %>
  <% end %>
