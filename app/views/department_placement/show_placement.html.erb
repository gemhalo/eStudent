<center> <br/>
<%#= netzke :Department_Placement,
    :class_name =>"Basepack::GridPanel",
    :model=> 'Person',
    :columns => [
      :name,
      :father_name,
      :grand_father_name,
      :department__name
      ],
     :width =>650,
     :height => 300
      
%>
<table border="+1">
    <tr>
      <th>Name</th>
      <th>Result</th>
      <th>Department</th>

    </tr>

    <% if @students.blank? %>
    		No students are placed
    <% else %>
    <%= flash[:notice]%><br/><br/>
		<% for student in @students%>
		   <tr>
		  <td><%= student.person.full_name %></td>
		  <td><%= student.applicant.educational_backgrounds.first.result %></td>
		  <td><%= student.department.name %></td>
		  </tr>
		<% end %>
	<% end %>

  </table><br/>
