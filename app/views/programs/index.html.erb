<h1>Listing programs</h1>

<table>
  <tr>
    <th>Program</th>
    <th>Program name</th>
    <th>Level</th>
    <th>Enrollment type</th>
    <th>Mode</th>
    <th>Award type</th>
    <th>Duration</th>
    <th>Total credit hour</th>
    <th>Department</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @programs.each do |program| %>
  <tr>
    <td><%= program.program_id %></td>
    <td><%= program.program_name %></td>
    <td><%= program.level %></td>
    <td><%= program.enrollment_type %></td>
    <td><%= program.mode %></td>
    <td><%= program.award_type %></td>
    <td><%= program.duration %></td>
    <td><%= program.total_credit_hour %></td>
    <td><%= program.department_id %></td>
    <td><%= link_to 'Show', program %></td>
    <td><%= link_to 'Edit', edit_program_path(program) %></td>
    <td><%= link_to 'Destroy', program, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

