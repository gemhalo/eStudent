<!DOCTYPE html>
<html>
<head>
  <title>Mekelle Univeristy- Student Information System</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag "/extjs/resources/css/ext-all.css" %>
  <%= stylesheet_link_tag "/extjs/resources/css/xtheme-gray.css" %>
  <%= javascript_include_tag :defaults %>
  <%= netzke_init %>
  <%= javascript_include_tag "main_page" %>
  <%= csrf_meta_tag %>
</head>
<body>
   <!-- Main Content -->
   <div id='north' style="float:none;clear:both;">
        <div class='left'>        
          <div id="logo">      <img src='/images/mu_icon_64.png'/ style='align:right'> </div>
          <div id="logo_text">  <h1>  Welcome to eStudent </h1> </div>
        </div>
       <div class="login">
        <% if current_user %>
            Hello <%= current_user.username %> (<%= link_to 'Logout', logout_path, :method => :delete %>)
        <% else %>
          <%= link_to "Register", new_user_path, :method => :get %> |
          <%= link_to "Login", login_url, :method => :get %>

        <% end %>
        </div>
    </div>
    <!-- Basic setup menu-->
    <div id="basic_setup">
            <%= render :partial =>'/shared/student/studentacademicsmenu' %><br/>
    </div>
    <div id="west" class="x-hide-display">
        <div>
            <%= render :partial =>'/shared/student/studentacademicsmenu' %><br/>
        </div>    

        <div id='student_menu'>
            <%= render :partial =>'/shared/student/studentacademicsmenu' %><br/>
        </div>
     </div>
    <div id="center2" class="x-hide-display">
           <%= yield %>
    </div>
    
    <div id="notification_area">  
     <h1> Notification </h1>
    </div>
 
   <div id="south" class="x-hide-display">
        <center><small>Mekelle Univerisity Gemhalo! project</small></center>
    </div>

   <!-- End of Main Content -->
</body>
</html>

