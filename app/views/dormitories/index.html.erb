<h1>Listing dormitories</h1>

<table>
  <tr>
    <th>Student</th>
    <th>Room</th>
    <th>Bed number</th>
    <th>Academic year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dormitories.each do |dormitory| %>
  <tr>
    <td><%= dormitory.student_id %></td>
    <td><%= dormitory.room_id %></td>
    <td><%= dormitory.bed_number %></td>
    <td><%= dormitory.academic_year %></td>
    <td><%= link_to 'Show', dormitory %></td>
    <td><%= link_to 'Edit', edit_dormitory_path(dormitory) %></td>
    <td><%= link_to 'Destroy', dormitory, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

